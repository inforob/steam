<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>{% block title%}{% endblock %}</title>
    <meta name="description" content="">
    <meta name="keywords" content="">
    <meta name="author" content="_nK">
    <link rel="icon" type="image/png" href="{{ asset('template/images/favicon.png') }}">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    {% include 'css.html.twig' %}
    {% block css %}{% endblock %}
</head>

<body>

{% include 'header.html.twig' %}

<div id="nk-nav-mobile" class="nk-navbar nk-navbar-side nk-navbar-right-side nk-navbar-overlay-content d-lg-none">
    <div class="nano">
        <div class="nano-content">
            <a href="{{ path('app_home') }}" class="nk-nav-logo">
                <img src="{{ asset('template/assets/images/logo.svg') }}" alt="" width="120">
            </a>
            <div class="nk-navbar-mobile-content">
                <ul class="nk-nav">
                    <!-- Here will be inserted menu from [data-mobile-menu="#nk-nav-mobile"] -->
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- END: Navbar Mobile -->
<div class="nk-main">

    <div class="nk-gap-2"></div>
        <div class="container">

            {% for flash_message in app.session.flashbag.get('success') %}
                {% include 'notices/ok.html.twig' with { message: flash_message }%}
            {% endfor %}

            {% for flash_message in app.session.flashbag.get('fail') %}
                {% include 'notices/ko.html.twig' with { message: flash_message }%}
            {% endfor %}

            {% block categories %}{% endblock %}

            {% block last_news %}{% endblock %}

            {% block main %}{% endblock %}

        </div>
</div>
<div class="nk-gap-4"></div>
<!-- START: Footer -->
<footer class="nk-footer">
    <div class="container">
        <div class="nk-gap-3"></div>
        <div class="row vertical-gap">
            <div class="col-md-6">
                <div class="nk-widget">
                    {% if formContact is defined %}
                    <h4 class="nk-widget-title"><span class="text-main-1">Contact</span> With Us</h4>
                    <div class="nk-widget-content">
                        {% include 'contact-form.html.twig' %}
                    </div>
                    {% endif %}
                </div>
            </div>
            <div class="col-md-6">
                <div class="nk-widget">
                    {% if posts is defined %}
                    <h4 class="nk-widget-title"><span class="text-main-1">Latest</span> Posts</h4>
                    <div class="nk-widget-content">
                        <div class="row vertical-gap sm-gap">
                            {% block latest_posts %}{% endblock %}
                        </div>
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>
        <div class="nk-gap-3"></div>
    </div>
    {% include 'copy-rights.html.twig' %}
</footer>
<!-- END: Footer -->

<!-- START: Page Background -->
<img class="nk-page-background-top" src="{{ asset('template/assets/images/bg-top.png') }}" alt="">
<img class="nk-page-background-bottom" src="{{ asset('template/assets/images/bg-bottom.png') }}" alt="">
<!-- END: Page Background -->
<!-- START: Search Modal -->
{% include 'search-modal.html.twig' %}
<!-- END: Search Modal -->
<!-- START: Login Modal -->
{% include 'login-modal.html.twig' %}
<!-- END: Login Modal -->
<!-- START: Scripts -->
{% include 'scripts.html.twig' %}
{% block scripts %}{% endblock %}
<!-- END: Scripts -->
</body>
</html>
