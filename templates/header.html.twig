<header class="nk-header nk-header-opaque">
    <!-- START: Top Contacts -->
    <div class="nk-contacts-top">
        <div class="container">
            <div class="nk-contacts-left">
                <ul class="nk-social-links">
                    <li><a class="nk-social-rss" href="#"><span class="fa fa-rss"></span></a></li>
                    <li><a class="nk-social-twitch" href="#"><span class="fab fa-twitch"></span></a></li>
                    <li><a class="nk-social-steam" href="#"><span class="fab fa-steam"></span></a></li>
                </ul>
            </div>
            <div class="nk-contacts-right">
                <ul class="nk-contacts-icons">
                    <li>
                        <a href="#" data-toggle="modal" data-target="#modalSearch">
                            <span class="fa fa-search"></span>
                        </a>
                    </li>
                    {% if not app.user %}
                    <li>
                        <a href="#" data-toggle="modal" data-target="#modalLogin">
                            <span class="fa fa-user"></span>
                        </a>
                    </li>
                    {% else %}
                        <li>
                            <a href="{{ path('app_profile') }}">
                                <span class="fa fa-user-plus"></span>
                            </a>
                        </li>
                        <li>
                            <a href="{{ path('app_logout') }}">
                                <span class="fa fa-sign-out-alt"></span>
                            </a>
                        </li>
                    {% endif %}
                    <li>
                        <span class="nk-cart-toggle">
                           <span class="fa fa-shopping-cart"></span>
                                {% if app.session.get('cartItems') is not empty %}
                                <span class="nk-badge">
                                {{ app.session.get('cartItems')|length }}
                                </span>
                                {% endif %}
                        </span>
                        {% if app.session.get('cartItems') is not empty %}
                        <div class="nk-cart-dropdown">
                            {% import 'macros/cart-item.html.twig' as c %}

                            {% for item in app.session.get('cartItems') %}
                                {{ c.print_top_cart_items(item['game'],item['quantity']) }}
                            {% endfor %}

                            <div class="nk-gap-2"></div>
                            <div class="text-center">
                                <a href="{{ path('app_checkout') }}" class="nk-btn nk-btn-rounded nk-btn-color-main-1 nk-btn-hover-color-white">Proceed to Checkout</a>
                            </div>
                        </div>
                        {% endif %}
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <!-- END: Top Contacts -->

    <nav class="nk-navbar nk-navbar-top nk-navbar-sticky nk-navbar-autohide">
        <div class="container">
            <div class="nk-nav-table">
                <a href="{{ path('app_home') }}" class="nk-nav-logo">
                    <img src="{{ asset('template/assets/images/logo.svg') }}" alt="logo" width="199">
                </a>
                <ul class="nk-nav nk-nav-right d-none d-lg-table-cell" data-nav-mobile="#nk-nav-mobile">
                    <li>
                        <a href="{{ path('app_home') }}"> Home </a>
                    </li>
                    <li>
                        <a href="{{ path('app_catalog') }}"> Catalog </a>
                    </li>
                    <li>
                        <a href="{{ path('app_cart_items') }}"> Cart </a>
                    </li>
                </ul>
                <ul class="nk-nav nk-nav-right nk-nav-icons">
                    <li class="single-icon d-lg-none">
                        <a href="#" class="no-link-effect" data-nav-toggle="#nk-nav-mobile">
                            <span class="nk-icon-burger">
                                <span class="nk-t-1"></span>
                                <span class="nk-t-2"></span>
                                <span class="nk-t-3"></span>
                            </span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <!-- END: Navbar -->
</header>